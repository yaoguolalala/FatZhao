/* pages/home/home.wxss */
@import '../../imges/icon/pulldown/iconfont.wxss';
@import '../../imges/icon/search/iconfont.wxss';

.headAdd{
  background-color: #ff6699;
  display: flex;
  width: 100%;
  height: 40px;
  flex-direction: column;
  justify-content: center;
}

.addrTo{
  padding-left: 20px;
  height: 40px;
  font-size: 14px;
  color: #fff;
}

.addrTo text{
  display: inline-block;
  height: 40px;
  line-height: 40px;
  text-align: center;
  margin-right: 8px;
}

.search{
  display: flex;
  background-color: #ff6699;
  height: 50px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.searchText{
  border-radius: 20px;
  margin: auto;
  background-color: #fff;
  height: 34px;
  width: 80%;
  text-align: center;
  font-size: 12px;
  line-height: 34px;
  color: #212121;
}
.search text{
  display: inline-block;
  height: 100%;
  vertical-align: top;
  margin-left: 6px;
}
